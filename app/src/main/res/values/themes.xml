<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Наша кастомная тема -->
    <style name="Theme.PrivacyInspector" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Цвета фона -->
        <item name="android:windowBackground">@color/bg_main</item>
        <item name="android:colorBackground">@color/bg_main</item>

        <!-- Основные цвета -->
        <item name="colorPrimary">@color/neon_blue</item>
        <item name="colorPrimaryDark">@color/bg_main</item>
        <item name="colorAccent">@color/neon_green</item>

        <!-- Системные бары -->
        <item name="android:statusBarColor">@color/bg_main</item>
        <item name="android:navigationBarColor">@color/bg_main</item>

        <!-- Цвет текста по умолчанию -->
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>
